[data-control=chat]
  position: fixed
  left: 0
  top: 0
  width: 100%
  height: 100%
  background-color: rgba(0,0,0,.2)

  article#message-list
    & div
      & > ul
        & > li
          list-style: none

  & textarea
    height: 54px
    resize: none

  & footer
    position: fixed
    bottom: 0
    z-index: 10
    width: 100%
