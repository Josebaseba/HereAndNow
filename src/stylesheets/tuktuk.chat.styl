[data-control=chat]
  top: 0
  bottom: 0

  & > header
    width: 100%

  & > article
    & div > ul > li
      list-style: none

    & div[data-control=users]
      position: fixed

  & textarea
    height: 54px
    resize: none

  & footer
    background-color: #D8D8D8
    bottom: 0
    z-index: 10
    width: 100%
    padding-bottom: 2em
