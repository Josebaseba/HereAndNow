extends /bases/layout
block section
  section(data-control="chat")
    header.bck.light.color
      .row
        .column_12
          h2#chat-name.text.italic.thin.center
    article
      .row
        .column_8.offset_2
          ul#message-list.scroll
            hr
          hr
        .column_2.right(data-control="users")
          hr
          span Connected users -&nbsp;
          span#user-count 0
          hr
          ul#user-list.scroll
    footer.bck
      .form.row.center.text
        .column_4.offset_4
          input#username.large(type="text", placeholder="What's your name?", maxlength="25", autocomplete="off")
        .column_8.offset_2
          textarea#message.large(type="text", placeholder="Message...", maxlength="512", style="display: none", autocomplete="off")
